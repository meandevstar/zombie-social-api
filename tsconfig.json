{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node", "mocha", "chai"],
  },
  "include": ["node_modules/@types", "src/**/*"],
  "exclude": ["node_modules", "dist/**/*", "mock", "__tests__/**/*"],
  "typeRoots": [
    "../node_modules/@types"
  ],
}
